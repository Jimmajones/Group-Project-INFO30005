<div class='heading'>
  <h1 class='page-title'>Dashboard</h1>
</div>

<div class='table-container'>
  <table class='patient-list'>
    <tr>
      <th class='td-left'>NAME</th>
      <th class='td-left'>LABEL</th>
      <th class='td-right'>BLOOD GLUCOSE LEVEL (NMO/L)</th>
      <th class='td-right'>WEIGHT (KG)</th>
      <th class='td-right'>INSULIN (DOSES)</th>
      <th class='td-right'>EXERCISE (STEPS)</th>
    </tr>
    {{#each patients}}
      <tr class='patient-data-content-row'>
        <td class='td-left profile-data'>
          <button onclick='toggle({{this._id}})' class='toggle-overlay'>
            <img
              id='button-{{this._id}}'
              class='warning-image'
              src='assets/toggle.svg'
            />
          </button>
          <img class='patient-overview-profile-image' src='assets/brian.svg' />
          <p class='names'>{{this.first_name}} {{this.last_name}}</p>
        </td>
        <td><div class='td-left label {{this.status}}'></div></td>
        {{#each this.daily_data}}
          {{#each this.values}}
            <td
              class='td-right content {{this.data.blood_glucose_level.warning}}'
            >{{this.value}}</td>
          {{/each}}
        {{/each}}
      </tr>
      <tr>
        <td colspan='7' class='warning-container'>
          <div class='warning-box {{this.status}}' id='{{this.id}}'>
            {{#each this.data}}
              {{#if this.warning}}
                <div class='patient-data-warning'>
                  <img
                    class='warning-image'
                    src='assets/{{this.warning}}.svg'
                  />
                  <div class='text-container'>
                    <h3 class='warning-header'>{{this.name}}</h3>
                    <span
                      class='content warning-explanation'
                    >{{this.text}}</span>
                  </div>
                </div>
              {{/if}}
            {{/each}}
          </div>
        </td>
      </tr>
    {{/each}}
  </table>
</div>