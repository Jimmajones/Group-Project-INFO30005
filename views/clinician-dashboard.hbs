<div class='heading'>
  <h1 class='page-title'>G'day {{clinician.first_name}}!</h1>
</div>
<p class='sub-heading'>Here is your patient list.</p>

<div class='table-container'>
  <table class='patient-list'>
    <tr>
      <th class='td-left'>Name</th>
      <th class='td-left'>Label</th>
      <th class='td-right'>Blood glucose level (nmo/L)</th>
      <th class='td-right'>Weight (kg)</th>
      <th class='td-right'>Insulin (doses)</th>
      <th class='td-right'>Steps<th>
    </tr>
    {{#each patients}}
      <tr class='patient-data-content-row'>
        <td class='td-left profile-data'>
          <button onclick="toggle('{{this._id}}')" class='toggle-overlay'>
            <i id='button-{{this._id}}' class='fa fa-chevron-right'></i>
          </button>

          <img class='patient-overview-profile-image' src='/assets/brian.svg' />
          <p class='names'>{{this.first_name}} {{this.last_name}}</p>
        </td>

        <td>
          <div class='label {{showStatus this.daily_data}}'></div>
        </td>
        {{#each this.daily_data}}
          {{#each this.values}}
            <td class='td-right content {{this.status}}'>{{this.value}}</td>
          {{/each}}
        {{/each}}
      </tr>
      <tr>
        <td colspan='7' class='warning-container'>
          <div class='warning-box {{showStatus this.daily_data}}' id='{{this._id}}'>
            {{#each this.daily_data}}
              {{#each this.values}}

                {{#if (needWarning this.status)}}
                  <div class='patient-data-warning'>
                    <img
                      class='warning-image'
                      src='/assets/{{this.status}}.svg'
                    />

                    <div class='text-container'>
                      <h4 class='warning-header'>{{showTypeName this.type}}</h4>
                      <span
                        class='content warning-explanation'
                      >{{showWarningText this.status}}</span>
                    </div>
                  </div>
                {{/if}}

              {{/each}}
            {{/each}}

          </div> <!-- end of warning box -->
        </td>
      </tr>
    {{/each}}
  </table>
</div>
