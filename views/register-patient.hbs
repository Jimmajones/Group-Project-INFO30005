<div class='heading'>
  <h1 class='page-title'>Register Patient</h1>
</div>

<div class='register-form-container'>
  <form id='register-form' method='post'>

    <div class='left-register-box'>

      <div class='input-row'>
        <div class='input-box'>
          <label for='user-id'>User ID (Email)</label>
          <input
            name='email'
            id='email'
            type='email'
            placeholder='Type email here...'
          />
        </div>

        <div class='input-box'>
          <label for='user-screenName'>Screen Name</label>
          <input
            name='screenName'
            id='screenName'
            type='text'
            placeholder='Type screen name here...'
          />
        </div>
      </div>

      <div class='input-row'>
        <div class='input-box'>
          <label for='user-firstName'>First Name</label>
          <input
            name='firstName'
            id='firstName'
            type='text'
            placeholder='Type first name here...'
          />
        </div>

        <div class='input-box'>
          <label for='user-lastName'>Last Name</label>
          <input
            name='lastName'
            id='lastName'
            type='text'
            placeholder='Type last name here...'
          />
        </div>
      </div>

      <div class='input-row'>
        <div class='input-box'>
          <label for='user-password'>Password</label>
          <input
            name='password'
            id='password'
            type='password'
            placeholder='Type password here...'
          />
        </div>

        <div class='input-box'>
          <label for='user-repassword'>Confirm Password</label>
          <input
            name='repassword'
            id='repassword'
            type='password'
            placeholder='Retype same password here...'
          />
        </div>
      </div>

      <div class='input-row'>
        <div class='input-box bio'>
          <label for='user-bio'>Bio</label>
          <textarea
            name='bio'
            id='bio'
            cols='4'
            placeholder='Type bio here...'
          ></textarea>
        </div>
      </div>

    </div>

    <div class='right-register-box'>

      <div class='profile-container'></div>
      <div class='image-cropper'>
        <img
          id='profile-register-avatar'
          class='patient-profile-avatar'
          src='/assets/avatar_0.svg'
        />
      </div>

      <p>Select your avatar</p>
      <div class='choosing-area'>
        {{#each (range 5)}}
          {{#if (numCompare this 0)}}
            <input
              id='icon-{{this}}'
              type='radio'
              name='avatar'
              value='{{this}}'
              onclick="toggleAvatar('{{this}}', 'profile-register-avatar')"
              checked='checked'
            />
          {{else}}
            <input
              id='icon-{{this}}'
              type='radio'
              name='avatar'
              value='{{this}}'
              onclick="toggleAvatar('{{this}}', 'profile-register-avatar')"
            />
          {{/if}}
          <label for='icon-{{this}}'>
            <img class='icon-choices' src='/assets/avatar_{{this}}.svg' />
          </label>
        {{/each}}
      </div>

    </div>

  </form>
  <button
    type='submit'
    form='register-form'
    class='register-button btn yellow-btn'
    value='Register'
  />
</div>
